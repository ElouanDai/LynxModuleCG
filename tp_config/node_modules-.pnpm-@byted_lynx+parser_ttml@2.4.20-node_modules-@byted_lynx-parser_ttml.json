{
  "name": "@byted-lynx/parser-ttml",
  "description": "ttml AST builder",
  "version": "2.4.20",
  "license": "MIT",
  "source": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "ava": {
    "serial": true,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "**/*.spec.ts"
    ]
  },
  "dependencies": {
    "@byted-lynx/parser-syntax": "2.0.11",
    "@byted-lynx/parser-utils": "1.4.7",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.14.39",
    "ava": "^3.15.0",
    "fs-extra": "^9.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "yaml": "^1.10.2"
  },
  "scripts": {
    "clear": "rimraf ./dist",
    "build:dep": "pnpm run build --filter @byted-lynx/parser-ttml^...",
    "build:cjs": "tsc -p ./tsconfig.build.json --outDir ./dist/cjs -m CommonJS",
    "build:esm": "tsc -p ./tsconfig.build.json --outDir ./dist/esm -m ESNext",
    "build": "pnpm run clear && pnpm run build:cjs && pnpm run build:esm",
    "dev": "tsc -w -p ./tsconfig.dev.json",
    "test": "ava --verbose --no-cache",
    "test:update": "ava --update-snapshots",
    "lint": "eslint --quiet --config .eslintrc.js src/**",
    "lint:fix": "eslint --quiet --fix --config .eslintrc.js src/**"
  }
}