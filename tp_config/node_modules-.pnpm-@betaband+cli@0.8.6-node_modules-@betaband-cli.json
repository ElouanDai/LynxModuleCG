{
  "name": "@betaband/cli",
  "version": "0.8.6",
  "description": "BetaBand CLI: Web Deployment Toolkit",
  "author": "BetaBand Team",
  "repository": "https://code.byted.org/betaband/betaband.git",
  "bin": {
    "bb": "dist/index.js"
  },
  "files": [
    "dist",
    "assets"
  ],
  "workspaces": [
    "packages/updater",
    "packages/runtime-agent"
  ],
  "scripts": {
    "prebootstrap": "node node_modules/esbuild/install.js",
    "bootstrap": "npm -w packages/runtime-agent run build",
    "watch": "rm -rf ./dist && npm run build:cli -- -w",
    "build": "rm -rf ./dist && npm run build:cli -- -tm",
    "prebuild:cli": "mkdir -p dist/runtime-agent && \\cp -r packages/runtime-agent/dist/* dist/runtime-agent",
    "build:cli": "ncc build src/cli.ts -so dist -e '@vercel/ncc'",
    "build:examples": "node scripts/build-examples.js",
    "lint": "npx eslint src test --ext .js,.ts",
    "test": "jest",
    "link:bbc": "ln -fs $(pwd)/dist/index.js /usr/local/bin/bbc",
    "prepub": "git fetch && git checkout release && git merge origin/master",
    "pub": "npm version patch && git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "prettier --write"
  },
  "dependencies": {
    "@vercel/ncc": "^0.33.0",
    "esbuild": "^0.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@dp/tea-sdk-node": "^2.1.1",
    "@jest/globals": "^27.0.3",
    "@types/bent": "^7.3.0",
    "@types/configstore": "^5.0.0",
    "@types/fs-extra": "^9.0.11",
    "@types/ignore-walk": "^3.0.1",
    "@types/inquirer": "^8.1.1",
    "@types/jest": "^27.0.1",
    "@types/marked-terminal": "^3.1.1",
    "@types/mri": "^1.1.0",
    "@types/node": "^12.20.12",
    "@types/semver": "^7.3.6",
    "@types/tar": "^4.0.3",
    "@types/text-table": "^0.2.1",
    "@types/yup": "^0.29.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "axios": "^0.21.1",
    "babel-jest": "^27.0.2",
    "bent": "^7.3.10",
    "ci-info": "^3.1.1",
    "cliui": "^7.0.4",
    "configstore": "^5.0.1",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "execa": "^5.0.0",
    "form-data": "^3.0.0",
    "fs-extra": "^9.0.1",
    "hasha": "^5.2.0",
    "husky": "^4.2.5",
    "ignore-walk": "^3.0.3",
    "inquirer": "^8.0.0",
    "jest": "^27.0.3",
    "kleur": "^4.1.1",
    "lint-staged": "^12.1.2",
    "mri": "^1.1.6",
    "node-fetch": "^2.6.5",
    "open": "^8.4.0",
    "p-limit": "^3.0.2",
    "pkg-dir": "^5.0.0",
    "prettier": "^2.0.5",
    "semver": "^6.3.0",
    "tar": "^6.0.2",
    "text-table": "^0.2.0",
    "typescript": "^4.3.5",
    "undici": "^4.1.0",
    "yup": "^0.32.8"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "build",
    "deploy",
    "web",
    "betaband"
  ]
}